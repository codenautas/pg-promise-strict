    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test w/mocha",
            "request": "launch",
            "type": "node",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            // Automatically stop program after launch.
            "stopOnEntry": false,
            "args": ["test/test*.js"],
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": null,
            "env": { "NODE_ENV": "testing"},
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ]
        }        
    ]
}